# Velolume Environment Variables
# Copy this to .env.local and fill in your values

# =============================================================================
# REQUIRED: AI Processing
# =============================================================================

# OpenAI API Key (for GPT-4o, Whisper)
OPENAI_API_KEY=sk-...

# Google AI API Key (for Gemini Flash - visual verification)
GOOGLE_AI_API_KEY=AIza...

# =============================================================================
# REQUIRED: Storage (DigitalOcean Spaces / S3-compatible)
# =============================================================================

SPACES_ACCESS_ID=your_access_id
SPACES_SECRET_KEY=your_secret_key
SPACES_ENDPOINT=sgp1.digitaloceanspaces.com
SPACES_BUCKET=auto-storefront-media
SPACES_REGION=sgp1

# =============================================================================
# REQUIRED: Product Search
# =============================================================================

# SerpAPI for Google Shopping search
SERPAPI_API_KEY=your_serpapi_key

# =============================================================================
# OPTIONAL: Affiliate Networks
# =============================================================================

# Amazon Associates
AMAZON_ASSOCIATE_TAG=your-tag-20
AMAZON_ACCESS_KEY=your_access_key
AMAZON_SECRET_KEY=your_secret_key

# Skimlinks
SKIMLINKS_PUBLISHER_ID=your_publisher_id
SKIMLINKS_API_KEY=your_api_key

# Involve Asia (for SEA markets)
INVOLVE_ASIA_API_KEY=your_api_key
INVOLVE_ASIA_PUBLISHER_ID=your_publisher_id

# =============================================================================
# OPTIONAL: Queue & Background Jobs
# =============================================================================

# Upstash QStash
QSTASH_TOKEN=your_qstash_token
QSTASH_CURRENT_SIGNING_KEY=your_signing_key
QSTASH_NEXT_SIGNING_KEY=your_next_signing_key

# Redis (for BullMQ job queue)
REDIS_URL=redis://localhost:6379

# =============================================================================
# OPTIONAL: Database
# =============================================================================

# Neon PostgreSQL
DATABASE_URL=postgresql://user:password@host/database

# =============================================================================
# OPTIONAL: Analytics & Domain
# =============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =============================================================================
# LOCAL DEVELOPMENT PATHS
# =============================================================================

# FFmpeg and yt-dlp paths (for local development)
# These are typically at /opt/homebrew/bin/ on macOS with Homebrew
FFMPEG_PATH=/opt/homebrew/bin/ffmpeg
FFPROBE_PATH=/opt/homebrew/bin/ffprobe
YTDLP_PATH=/opt/homebrew/bin/yt-dlp
